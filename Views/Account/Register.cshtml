@model BlogProjesi.Models.KayitViewModel

<link rel="stylesheet" href="~/css/login-style.css" />

<div class="container login-container">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-9">
            <div class="card login-card flex-row my-5">
                <div class="col-lg-7 login-form-col">
                    <h2 class="login-title text-center">Kayıt Ol</h2>
                    <p class="text-center text-muted mb-4">TechNode ailesine katılın!</p>

                    <form asp-action="Register" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <input asp-for="Ad" class="form-control form-control-lg" placeholder="Adınız" />
                                <span asp-validation-for="Ad" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <input asp-for="Soyad" class="form-control form-control-lg" placeholder="Soyadınız" />
                                <span asp-validation-for="Soyad" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <input asp-for="DogumTarihi" class="form-control" type="date" max="@DateTime.Now.ToString("yyyy-MM-dd")" />
                            <span asp-validation-for="DogumTarihi" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <input asp-for="Email" class="form-control form-control-lg" placeholder="E-Posta Adresi" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <input asp-for="Sifre" type="password" class="form-control form-control-lg" placeholder="Şifre (En az 6 karakter)" />
                            <span asp-validation-for="Sifre" class="text-danger small"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-mor btn-lg">HESAP OLUŞTUR</button>
                        </div>
                    </form>
                </div>

                <div class="col-lg-5 login-info-col d-none d-lg-flex">
                    <h3 class="info-title">Zaten Üye misiniz?</h3>
                    <p class="text-white-50 mb-4">Hesabınız varsa hemen giriş yapın ve içeriklere erişin.</p>
                    <a asp-action="Login" class="btn btn-outline-beyaz">GİRİŞ YAP</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}