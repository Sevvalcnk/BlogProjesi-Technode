@model BlogProjesi.Models.LoginViewModel
@{
    ViewData["Title"] = "Giriş Yap / Kayıt Ol";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TechNode - Portal</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Rajdhani:wght@600;700&family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">

    <style>
        :root {
            --neon-cyan: #00E5FF;
            --neon-green: #00FFCC;
            --bg-dark: #05070a;
            --bg-panel: #0A0F1C;
            --text-white: #FFFFFF;
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
            font-family: 'Poppins', sans-serif;
        }

        body {
            background-color: var(--bg-dark);
            background-image: linear-gradient(rgba(5, 7, 10, 0.9), rgba(5, 7, 10, 0.9)), url('https://images.pexels.com/photos/5380664/pexels-photo-5380664.jpeg');
            background-size: cover;
            background-position: center;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            color: var(--text-white);
            overflow: hidden;
        }

        .container {
            width: 900px;
            height: 600px;
            background-color: var(--bg-panel);
            border-radius: 20px;
            box-shadow: 0 0 30px rgba(0, 229, 255, 0.15);
            position: relative;
            overflow: hidden;
            max-width: 95%;
            border: 2px solid var(--neon-cyan);
        }

        .form-container {
            position: absolute;
            top: 0;
            height: 100%;
            transition: all 0.6s ease-in-out;
        }

        .sign-in-container {
            left: 0;
            width: 50%;
            z-index: 2;
        }

        .sign-up-container {
            left: 0;
            width: 50%;
            opacity: 0;
            z-index: 1;
        }

        form {
            background-color: var(--bg-panel);
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            padding: 0 40px;
            height: 100%;
            text-align: center;
        }

        h2 {
            font-family: 'Rajdhani', sans-serif;
            font-weight: 700;
            font-size: 2.5rem;
            color: var(--neon-cyan);
            margin-bottom: 20px;
            text-shadow: 0 0 15px rgba(0, 229, 255, 0.6);
        }

        .input-group {
            position: relative;
            width: 100%;
            margin: 10px 0;
        }

            .input-group i {
                position: absolute;
                top: 50%;
                left: 15px;
                transform: translateY(-50%);
                color: var(--neon-cyan);
                font-size: 1rem;
                z-index: 10;
            }

        input {
            background-color: #000000 !important;
            border: 1px solid var(--neon-cyan) !important;
            padding: 12px 15px 12px 45px;
            width: 100%;
            border-radius: 8px;
            color: #FFFFFF !important;
            outline: none;
            transition: 0.3s;
            font-size: 0.95rem;
        }

            input:focus {
                border-color: #fff !important;
                box-shadow: 0 0 15px rgba(0, 229, 255, 0.5);
            }

        .btn-cyber {
            border-radius: 50px;
            border: none;
            background: linear-gradient(90deg, var(--neon-cyan), #0088ff);
            color: #000;
            font-size: 14px;
            font-weight: 800;
            padding: 12px 50px;
            letter-spacing: 1px;
            text-transform: uppercase;
            margin-top: 15px;
            cursor: pointer;
            transition: 0.3s;
            box-shadow: 0 0 20px rgba(0, 229, 255, 0.4);
        }

            .btn-cyber:hover {
                transform: scale(1.05);
                color: white;
            }

        .btn-ghost {
            background-color: transparent;
            border: 2px solid #fff;
            color: #fff;
            border-radius: 50px;
            padding: 12px 45px;
            font-weight: bold;
            letter-spacing: 1px;
            text-transform: uppercase;
            cursor: pointer;
            margin-top: 20px;
        }

        .overlay-container {
            position: absolute;
            top: 0;
            left: 50%;
            width: 50%;
            height: 100%;
            overflow: hidden;
            transition: transform 0.6s ease-in-out;
            z-index: 100;
            border-left: 2px solid var(--neon-cyan);
        }

        .overlay {
            background: linear-gradient(135deg, #000000 0%, #1a1a1a 100%);
            color: #ffffff;
            position: relative;
            left: -100%;
            height: 100%;
            width: 200%;
            transform: translateX(0);
            transition: transform 0.6s ease-in-out;
        }

        .overlay-panel {
            position: absolute;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            padding: 0 40px;
            text-align: center;
            top: 0;
            height: 100%;
            width: 50%;
            transform: translateX(0);
            transition: transform 0.6s ease-in-out;
        }

        .overlay-left {
            transform: translateX(-20%);
        }

        .overlay-right {
            right: 0;
            transform: translateX(0);
        }

        /* MASAÜSTÜ ANİMASYONLARI */
        .container.right-panel-active .sign-in-container {
            transform: translateX(100%);
        }

        .container.right-panel-active .sign-up-container {
            transform: translateX(100%);
            opacity: 1;
            z-index: 5;
            animation: show 0.6s;
        }

        .container.right-panel-active .overlay-container {
            transform: translateX(-100%);
            border-left: none;
            border-right: 2px solid var(--neon-cyan);
        }

        .container.right-panel-active .overlay {
            transform: translateX(50%);
        }

        .container.right-panel-active .overlay-left {
            transform: translateX(0);
        }

        .container.right-panel-active .overlay-right {
            transform: translateX(20%);
        }

        @@keyframes show {
            0%, 49.99% {
                opacity: 0;
                z-index: 1;
            }

            50%, 100% {
                opacity: 1;
                z-index: 5;
            }
        }

        .back-link {
            position: absolute;
            top: 30px;
            left: 30px;
            color: #888;
            text-decoration: none;
            font-weight: 600;
            z-index: 999;
        }

        .mobile-switch-link {
            display: none;
            margin-top: 20px;
            font-size: 14px;
            color: #aaa;
            cursor: pointer;
        }

            .mobile-switch-link a {
                color: var(--neon-cyan);
                font-weight: bold;
                text-decoration: none;
            }

        .text-danger {
            color: #ff3333;
            font-size: 0.75rem;
            width: 100%;
            text-align: left;
            margin-top: 5px;
        }

        .forgot-password-link {
            width: 100%;
            text-align: right;
            margin-bottom: 15px;
            margin-top: 5px;
        }

            .forgot-password-link a {
                color: #888;
                font-size: 0.85rem;
                text-decoration: none;
            }

        /* 🔥 MOBİL ÖZEL AYARLAR (Kesin Çözüm) 🔥 */
        @@media (max-width: 768px) {
            body {
                height: auto;
                min-height: 100vh;
                padding: 20px 0;
                overflow-y: auto;
            }

            .container {
                width: 95%;
                max-width: 450px;
                height: auto;
                min-height: 600px;
                position: relative; /* Relative önemli */
                display: block; /* Flex iptal */
            }
            /* Kayar paneli (Overlay) mobilde tamamen yok et */
            .overlay-container {
                display: none !important;
            }
            /* Formlar üst üste binsin, pozisyonları sıfırla */
            .form-container {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                transition: none; /* Animasyonu kapat */
                background-color: var(--bg-panel);
                padding: 20px;
            }

            form {
                padding: 0 10px;
                height: 100%;
            }

            .mobile-switch-link {
                display: block;
            }
            /* Varsayılan: Giriş Açık, Kayıt Kapalı */
            .sign-in-container {
                display: flex;
                opacity: 1;
                z-index: 5;
            }

            .sign-up-container {
                display: none;
                opacity: 0;
                z-index: 1;
            }
            /* --- .right-panel-active SINIFI GELİNCE --- */
            /* Giriş formunu GİZLE */
            .container.right-panel-active .sign-in-container {
                display: none !important;
            }
            /* Kayıt formunu GÖSTER */
            .container.right-panel-active .sign-up-container {
                display: flex !important;
                opacity: 1 !important;
                z-index: 10 !important;
                transform: none !important; /* Kayma efektini iptal et */
            }
        }
    </style>
</head>
<body>

    <a href="/" class="back-link"><i class="fas fa-arrow-left"></i> ANA SAYFA</a>

    <div class="container" id="container">

        <div class="form-container sign-up-container">
            <form asp-controller="Account" asp-action="Register" method="post">
                <h2>HESAP OLUŞTUR</h2>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="input-group"><i class="fas fa-user"></i><input asp-for="Ad" placeholder="Adınız" required /></div>
                <div class="input-group"><i class="fas fa-user-tag"></i><input asp-for="Soyad" placeholder="Soyadınız" required /></div>
                <div class="input-group"><i class="fas fa-envelope"></i><input asp-for="Email" type="email" placeholder="E-Posta" required /></div>
                <div class="input-group"><i class="fas fa-lock"></i><input asp-for="Sifre" type="password" placeholder="Şifre" required /></div>
                <div class="input-group"><i class="fas fa-lock-open"></i><input asp-for="SifreTekrar" type="password" placeholder="Şifre Tekrar" required /></div>

                <button type="submit" class="btn-cyber">KAYIT OL</button>
                <p class="mobile-switch-link">Zaten hesabın var mı? <a href="#" id="signInLink">Giriş Yap</a></p>
            </form>
        </div>

        <div class="form-container sign-in-container">
            <form asp-controller="Account" asp-action="Login" method="post">
                <h2>GİRİŞ YAP</h2>
                @if (TempData["Basarili"] != null)
                {
                    <div class="alert" style="color: #00FFCC; border: 1px solid #00FFCC; padding: 10px; width: 100%; font-size: 0.8rem;">
                        <i class="fas fa-check-circle"></i> @TempData["Basarili"]
                    </div>
                }
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="input-group"><i class="fas fa-envelope"></i><input asp-for="Email" placeholder="E-Posta Adresi" required /></div>
                <span asp-validation-for="Email" class="text-danger"></span>

                <div class="input-group"><i class="fas fa-lock"></i><input asp-for="Sifre" type="password" placeholder="Şifre" required /></div>
                <span asp-validation-for="Sifre" class="text-danger"></span>

                <div class="forgot-password-link"><a asp-controller="Account" asp-action="SifremiUnuttum">Şifremi Unuttum?</a></div>
                <button type="submit" class="btn-cyber">GİRİŞ YAP</button>
                <p class="mobile-switch-link">Henüz hesabın yok mu? <a href="#" id="signUpLink">Hemen Kayıt Ol</a></p>
            </form>
        </div>

        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-left">
                    <h1>HOŞ GELDİNİZ!</h1>
                    <p>TechNode ailesine katılmak için giriş yapın.</p>
                    <button class="btn-ghost" id="signIn">GİRİŞ YAP</button>
                </div>
                <div class="overlay-panel overlay-right">
                    <h1>MERHABA!</h1>
                    <p>Hemen aramıza katılın ve geleceği kodlayın.</p>
                    <button class="btn-ghost" id="signUp">KAYIT OL</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        const signUpButton = document.getElementById('signUp');
        const signInButton = document.getElementById('signIn');
        const signUpLink = document.getElementById('signUpLink'); // Mobildeki link
        const signInLink = document.getElementById('signInLink'); // Mobildeki link
        const container = document.getElementById('container');

        // Kayıt Ol'a tıklandı (Panel Kayan veya Mobilde Görünür)
        function showRegister() {
            container.classList.add("right-panel-active");
        }

        // Giriş Yap'a tıklandı
        function showLogin() {
            container.classList.remove("right-panel-active");
        }

        if(signUpButton) signUpButton.addEventListener('click', showRegister);
        if(signInButton) signInButton.addEventListener('click', showLogin);

        // Mobil Link Tıklamaları (PreventDefault önemli!)
        if(signUpLink) signUpLink.addEventListener('click', (e) => {
            e.preventDefault();
            showRegister();
        });

        if(signInLink) signInLink.addEventListener('click', (e) => {
            e.preventDefault();
            showLogin();
        });

        // Controller'dan gelen komut varsa paneli aç
        window.onload = function() {
            if ('@ViewBag.ShowRegisterPanel' === 'True') {
                container.classList.add("right-panel-active");
            }
        };
    </script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>