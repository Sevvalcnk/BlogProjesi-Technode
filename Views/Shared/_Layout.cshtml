@using Microsoft.AspNetCore.Identity
@using BlogProjesi.Models
@inject SignInManager<Kullanici> SignInManager
@inject UserManager<Kullanici> UserManager

@{
    string AktifYap(string controller, string action)
    {
        var currentController = ViewContext.RouteData.Values["Controller"]?.ToString();
        var currentAction = ViewContext.RouteData.Values["Action"]?.ToString();
        return (currentController == controller && currentAction == action) ? "active" : "";
    }
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TechNode</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Rajdhani:wght@500;600;700;800;900&family=Poppins:wght@300;400;600;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>

        html, body {
            overflow-x: hidden;
            width: 100%;
            height: 100%;
        }

        .container {
            width: 100% !important;
            padding-left: 15px !important;
            padding-right: 15px !important;
        }


        .wrapper {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }


        .content {
            flex: 1;
        }


        .navbar {
            background-color: #000000 !important;
            border-bottom: 2px solid #00E5FF;
            padding: 15px 0;
            box-shadow: 0 5px 20px rgba(0, 229, 255, 0.2);
        }


        .navbar-brand {
            font-family: 'Rajdhani', sans-serif;
            font-weight: 900;
            font-size: 2.5rem;
            letter-spacing: 2px;
            text-transform: uppercase;
            display: flex;
            align-items: center;
            text-decoration: none !important;
            line-height: 1;
            cursor: pointer;
        }


        .brand-tech {
            color: #00E5FF;
            margin-right: 5px;
            text-shadow: 0 0 5px #00E5FF, 0 0 15px rgba(0, 229, 255, 0.8);
            transition: 0.3s;
        }


        .brand-node {
            color: #FFFFFF;
            text-shadow: 0 0 5px #FFFFFF, 0 0 15px rgba(255, 255, 255, 0.8);
            transition: 0.3s;
        }

        .navbar-brand:hover .brand-tech {
            text-shadow: 0 0 10px #00E5FF, 0 0 30px #00E5FF;
        }

        .navbar-brand:hover .brand-node {
            text-shadow: 0 0 10px #FFFFFF, 0 0 30px rgba(255, 255, 255, 0.8);
        }


        .nav-link {
            font-family: 'Poppins', sans-serif;
            font-weight: 700;
            color: #cccccc !important;
            margin: 0 15px;
            transition: 0.3s;
            text-transform: uppercase;
            font-size: 1rem;
            letter-spacing: 1px;
        }

            .nav-link:hover, .nav-link.active {
                color: #fff !important;
                text-shadow: 0 0 10px #00E5FF;
                transform: translateY(-2px);
            }


        footer {
            background-color: #05070a !important;
            border-top: 1px solid rgba(0, 229, 255, 0.2) !important;
            color: #888;
            padding: 20px 0;
            width: 100%;
        }

        html, body {
            /* Koyu bir arka plan rengi */
            background-color: #05070a !important;
            /* Neon temaya uygun bir arka plan resmi */
            background-image: linear-gradient(rgba(5, 7, 10, 0.9), rgba(5, 7, 10, 0.9)), /* Resmi biraz karartmak için */
            url('https://images.pexels.com/photos/5380664/pexels-photo-5380664.jpeg'); /* Neon görsel linki */
            /* Arka planın tüm sayfayı kaplamasını ve tekrar etmemesini sağlar */
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            background-attachment: fixed; /* Sayfa kaydırılsa bile arka plan sabit kalır */
            /* Sayfanın en az ekran yüksekliği kadar olmasını garanti eder */
            min-height: 100vh;
            /* Yatay kaydırmayı engeller */
            overflow-x: hidden;
        }
    </style>
</head>

<body>
    <div class="wrapper">
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark box-shadow">
                <div class="container">

                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <span class="brand-tech">TECH</span><span class="brand-node">NODE</span>
                    </a>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1 ms-5">
                            <li class="nav-item"><a class="nav-link @AktifYap("Home", "Index")" asp-controller="Home" asp-action="Index">Ana Sayfa</a></li>
                            <li class="nav-item"><a class="nav-link @AktifYap("Makales", "Index")" asp-controller="Makales" asp-action="Index">Makaleler</a></li>
                            <li class="nav-item"><a class="nav-link @AktifYap("Home", "Hakkimizda")" asp-controller="Home" asp-action="Hakkimizda">Hakkımızda</a></li>
                            <li class="nav-item"><a class="nav-link @AktifYap("Home", "Iletisim")" asp-controller="Home" asp-action="Iletisim">İletişim</a></li>
                        </ul>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Istatistikler" style="color: #00E5FF; font-weight: bold;">
                                <i class="fas fa-chart-pie"></i> ANALİZ
                            </a>
                        </li>

                        <ul class="navbar-nav">
                            @if (SignInManager.IsSignedIn(User))
                            {
                                // --- 🔥 BURADA KULLANICI ADINI ÇEKİYORUZ 🔥 ---
                                var user = await UserManager.GetUserAsync(User);
                                var gorunenIsim = user?.Ad ?? User.Identity.Name;
                                // -----------------------------------------------

                                <li class="nav-item d-flex align-items-center me-3">
                                    <a class="nav-link" asp-controller="Account" asp-action="Profil" style="cursor: pointer; color: white !important;">
                                        👋 Hoşgeldin, <span style="color: #00E5FF; text-shadow: 0 0 10px rgba(0, 229, 255, 0.8); font-weight:bold;">@gorunenIsim</span>
                                    </a>
                                </li>
                                <li class="nav-item d-flex align-items-center">
                                    <form class="form-inline" asp-controller="Account" asp-action="Logout">
                                        <button type="submit" class="btn btn-sm btn-outline-danger fw-bold" style="border-radius: 20px; padding: 5px 20px; border-width: 2px;">
                                            <i class="fas fa-sign-out-alt"></i> ÇIKIŞ
                                        </button>
                                    </form>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item"><a class="nav-link fw-bold" asp-controller="Account" asp-action="Register" style="color: #00E5FF !important;">Kayıt Ol</a></li>
                                <li class="nav-item"><a class="nav-link btn btn-outline-light px-4 ms-2 text-white fw-bold" asp-controller="Account" asp-action="Login" style="border-radius: 20px; border: 2px solid white;">Giriş Yap</a></li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <main role="main" class="content container pb-3 pt-4">
            @RenderBody()
        </main>

        <footer class="border-top footer text-center">
            <div class="container">
                &copy; 2026 - <strong style="color: #00E5FF; text-shadow: 0 0 5px #00E5FF;">TechNode</strong> - Tüm Hakları Saklıdır.
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>