@using System.Text.RegularExpressions
@model BlogProjesi.Models.Makale

@{
    ViewData["Title"] = "Makaleyi Sil";

    
    string kisaOzet = "İçerik yok.";
    if (Model != null && !string.IsNullOrEmpty(Model.Icerik))
    {
        
        string safIcerik = Regex.Replace(Model.Icerik, "<.*?>", String.Empty);

        
        kisaOzet = safIcerik.Length > 100 ? safIcerik.Substring(0, 100) + "..." : safIcerik;
    }
}

<style>
    
    body {
        background-color: #05070a;
        background-image: radial-gradient(circle at 50% -20%, rgba(255, 0, 0, 0.15), transparent 60%), radial-gradient(circle at 50% 120%, rgba(255, 0, 0, 0.1), transparent 60%);
        background-attachment: fixed;
        color: #e0e0e0;
        font-family: 'Poppins', sans-serif;
    }

    
    .delete-container {
        max-width: 600px;
        margin: 60px auto;
        background-color: rgba(15, 10, 10, 0.95);
        border: 2px solid rgba(255, 68, 68, 0.3);
        border-radius: 20px;
        padding: 40px;
        box-shadow: 0 0 50px rgba(255, 0, 0, 0.2);
        text-align: center;
        position: relative;
        overflow: hidden;
    }

    .warning-icon {
        font-size: 4rem;
        color: #ff4444;
        margin-bottom: 20px;
        animation: pulse 1.5s infinite;
        text-shadow: 0 0 20px rgba(255, 68, 68, 0.6);
    }

    .delete-title {
        font-family: 'Rajdhani', sans-serif;
        font-weight: 800;
        font-size: 2.5rem;
        color: #ff4444;
        text-transform: uppercase;
        margin-bottom: 10px;
        text-shadow: 0 0 10px rgba(255, 68, 68, 0.4);
    }

    .delete-subtitle {
        color: #aaa;
        font-size: 1rem;
        margin-bottom: 30px;
    }

    .article-preview {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 15px;
        padding: 20px;
        text-align: left;
        margin-bottom: 30px;
    }

    .preview-label {
        font-size: 0.8rem;
        color: #ff4444;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-bottom: 5px;
        display: block;
    }

    .preview-text {
        font-size: 1.1rem;
        color: #fff;
        margin-bottom: 15px;
        font-weight: 500;
    }

    .preview-img {
        width: 100%;
        height: 150px;
        object-fit: cover;
        border-radius: 10px;
        margin-bottom: 15px;
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .btn-delete-confirm {
        background: linear-gradient(90deg, #ff4444, #ff0000);
        color: #fff;
        font-weight: 800;
        padding: 12px 40px;
        border-radius: 50px;
        text-transform: uppercase;
        letter-spacing: 1px;
        border: none;
        box-shadow: 0 0 20px rgba(255, 0, 0, 0.4);
        transition: 0.3s;
        cursor: pointer;
        font-family: 'Rajdhani', sans-serif;
        font-size: 1.1rem;
        width: 100%;
    }

        .btn-delete-confirm:hover {
            transform: scale(1.05);
            box-shadow: 0 0 40px rgba(255, 0, 0, 0.7);
        }

    .btn-cancel {
        background: transparent;
        color: #888;
        border: 1px solid #444;
        padding: 12px 40px;
        border-radius: 50px;
        text-decoration: none;
        transition: 0.3s;
        display: inline-block;
        font-weight: 600;
        width: 100%;
        text-align: center;
        margin-top: 10px;
    }

        .btn-cancel:hover {
            border-color: #fff;
            color: #fff;
            background: rgba(255, 255, 255, 0.1);
        }

    @@keyframes pulse {
        0% {
            transform: scale(1);
            opacity: 1;
        }

        50% {
            transform: scale(1.1);
            opacity: 0.8;
        }

        100% {
            transform: scale(1);
            opacity: 1;
        }
    }
</style>

<div class="container">
    <div class="delete-container">

        <i class="fas fa-exclamation-triangle warning-icon"></i>

        <h1 class="delete-title">EMİN MİSİN?</h1>
        <p class="delete-subtitle">Bu işlem geri alınamaz. Aşağıdaki makale kalıcı olarak silinecek.</p>

        <div class="article-preview">

            @if (!string.IsNullOrEmpty(Model.ResimUrl))
            {
                <img src="@Model.ResimUrl" class="preview-img" alt="Kapak Resmi">
            }

            <span class="preview-label">MAKALE BAŞLIĞI</span>
            <div class="preview-text">@Model.Baslik</div>

            <div class="row">
                <div class="col-6">
                    <span class="preview-label">KATEGORİ</span>
                    <div class="preview-text">@Model.Kategori?.Ad</div>
                </div>
                <div class="col-6">
                    <span class="preview-label">TARİH</span>
                    <div class="preview-text">@Model.OlusturulmaTarihi.ToString("dd.MM.yyyy")</div>
                </div>
            </div>

            <span class="preview-label">İÇERİK ÖZETİ</span>
            <div class="preview-text" style="font-size: 0.9rem; color: #aaa;">
                @kisaOzet
            </div>
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />

            <div class="row g-2">
                <div class="col-md-6 order-md-2">
                    <button type="submit" class="btn-delete-confirm">
                        <i class="fas fa-trash-alt me-2"></i> EVET, SİL
                    </button>
                </div>
                <div class="col-md-6 order-md-1">
                    <a asp-action="Index" class="btn-cancel">
                        <i class="fas fa-times me-2"></i> VAZGEÇ
                    </a>
                </div>
            </div>
        </form>

    </div>
</div>