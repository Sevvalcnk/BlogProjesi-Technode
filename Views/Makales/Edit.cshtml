@model BlogProjesi.Models.Makale

@{
    ViewData["Title"] = "Makaleyi Düzenle";
}

<style>
    
    body {
        background-color: #05070a;
        background-image: radial-gradient(circle at 50% -20%, rgba(0, 229, 255, 0.15), transparent 60%), radial-gradient(circle at 50% 120%, rgba(0, 255, 204, 0.1), transparent 60%);
        background-attachment: fixed;
        color: #fff;
        font-family: 'Poppins', sans-serif;
    }

    
    .edit-container {
        background-color: rgba(10, 15, 28, 0.95);
        border: 1px solid rgba(0, 229, 255, 0.2);
        border-radius: 20px;
        padding: 40px;
        box-shadow: 0 0 50px rgba(0, 0, 0, 0.8);
        margin-top: 30px;
        margin-bottom: 50px;
    }

    
    .page-title {
        font-family: 'Rajdhani', sans-serif;
        font-weight: 700;
        font-size: 2.5rem;
        color: #00E5FF;
        text-transform: uppercase;
        margin-bottom: 30px;
        text-shadow: 0 0 10px rgba(0, 229, 255, 0.3);
        border-bottom: 1px solid rgba(0, 229, 255, 0.2);
        padding-bottom: 15px;
    }

  
    .form-label {
        color: #00E5FF;
        font-weight: 600;
        margin-bottom: 8px;
    }

    
    .form-control, .form-select {
        background-color: #0b1120 !important; 
        border: 1px solid rgba(0, 229, 255, 0.3) !important;
        color: #fff !important; 
        border-radius: 10px;
        padding: 12px 15px;
    }

        
        .form-control:focus, .form-select:focus {
            background-color: #122335 !important;
            border-color: #00FFCC !important;
            box-shadow: 0 0 15px rgba(0, 255, 204, 0.2) !important;
            color: #fff !important;
        }

        
        .form-control::placeholder {
            color: #888 !important;
            opacity: 1;
        }

    
    input:-webkit-autofill,
    input:-webkit-autofill:hover,
    input:-webkit-autofill:focus,
    textarea:-webkit-autofill,
    textarea:-webkit-autofill:hover,
    textarea:-webkit-autofill:focus,
    select:-webkit-autofill,
    select:-webkit-autofill:hover,
    select:-webkit-autofill:focus {
        -webkit-text-fill-color: #fff !important; 
        -webkit-box-shadow: 0 0 0px 1000px #0b1120 inset !important; 
        transition: background-color 5000s ease-in-out 0s;
    }

    
    .note-editor {
        border: 1px solid rgba(0, 229, 255, 0.3) !important;
        background-color: #fff !important;
    }

    .note-editable {
        background-color: #fff !important;
        color: #000 !important; 
    }

    
    .text-danger {
        color: #ff4444 !important;
        font-size: 0.85rem;
        margin-top: 5px;
        display: block;
    }

    .btn-save {
        background: linear-gradient(90deg, #00FFCC, #00ffa6);
        color: #05070a;
        font-weight: 800;
        padding: 12px 40px;
        border-radius: 50px;
        text-transform: uppercase;
        letter-spacing: 1px;
        border: none;
        box-shadow: 0 0 20px rgba(0, 255, 204, 0.3);
        transition: 0.3s;
        cursor: pointer;
    }

        .btn-save:hover {
            transform: scale(1.05);
            box-shadow: 0 0 40px rgba(0, 255, 204, 0.6);
            color: #000;
        }

    .btn-back {
        background: transparent;
        color: #888;
        border: 1px solid #444;
        padding: 12px 30px;
        border-radius: 50px;
        text-decoration: none;
        transition: 0.3s;
        display: inline-block;
        font-weight: 600;
    }

        .btn-back:hover {
            border-color: #fff;
            color: #fff;
        }
</style>

<div class="container">
    <div class="edit-container">

        <h2 class="page-title"><i class="fas fa-edit"></i> Makaleyi Düzenle</h2>

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="OlusturulmaTarihi" />

            <div class="mb-4">
                <label asp-for="Baslik" class="form-label">Makale Başlığı</label>
                <input asp-for="Baslik" class="form-control" placeholder="Örn: Yapay Zeka Nedir?" />
                <span asp-validation-for="Baslik" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="KategoriId" class="form-label">Kategori</label>
                <select asp-for="KategoriId" class="form-select" asp-items="ViewBag.KategoriId">
                    <option value="">-- Bir Kategori Seçin --</option>
                </select>
                <span asp-validation-for="KategoriId" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="ResimUrl" class="form-label">Kapak Resmi (Link)</label>
                <input asp-for="ResimUrl" class="form-control" placeholder="https://..." />
                <span asp-validation-for="ResimUrl" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Icerik" class="form-label">İçerik</label>
                <textarea asp-for="Icerik" id="summernote" class="form-control"></textarea>
                <span asp-validation-for="Icerik" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center mt-5">
                <a asp-action="Index" class="btn-back">
                    <i class="fas fa-arrow-left"></i> Listeye Dön
                </a>
                <button type="submit" class="btn-save">
                    <i class="fas fa-save"></i> Değişiklikleri Kaydet
                </button>
            </div>
        </form>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            $('#summernote').summernote({
                placeholder: 'Makalenizi buraya yazın...',
                tabsize: 2,
                height: 300,
                toolbar: [
                  ['style', ['style']],
                  ['font', ['bold', 'underline', 'clear']],
                  ['color', ['color']],
                  ['para', ['ul', 'ol', 'paragraph']],
                  ['table', ['table']],
                  ['insert', ['link', 'picture', 'video']],
                  ['view', ['fullscreen', 'codeview', 'help']]
                ]
            });
        });
    </script>
}