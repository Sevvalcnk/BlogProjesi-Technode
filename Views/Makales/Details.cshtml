@model BlogProjesi.Models.Makale

@{
    ViewData["Title"] = Model.Baslik;
}

<style>
    
    body {
        background-color: #05070a;
        background-image: radial-gradient(circle at 50% -20%, rgba(0, 229, 255, 0.1), transparent 60%), radial-gradient(circle at 50% 120%, rgba(0, 255, 204, 0.05), transparent 60%);
        background-attachment: fixed;
        color: #e0e0e0;
        font-family: 'Poppins', sans-serif;
    }

    
    .article-container {
        background-color: rgba(10, 15, 28, 0.95);
        border: 1px solid rgba(0, 229, 255, 0.2);
        border-radius: 20px;
        padding: 40px;
        box-shadow: 0 0 50px rgba(0, 0, 0, 0.8);
        margin-top: 30px;
        margin-bottom: 50px;
    }

    
    .article-header {
        border-bottom: 1px solid rgba(0, 229, 255, 0.2);
        padding-bottom: 20px;
        margin-bottom: 30px;
    }

    .article-title {
        font-family: 'Rajdhani', sans-serif;
        font-weight: 700;
        font-size: 3rem;
        color: #00E5FF;
        text-transform: uppercase;
        text-shadow: 0 0 15px rgba(0, 229, 255, 0.3);
        margin-bottom: 15px;
        line-height: 1.2;
    }

    .article-meta {
        color: #888;
        font-size: 0.9rem;
        display: flex;
        align-items: center;
        gap: 20px;
        flex-wrap: wrap;
    }

    .category-badge {
        background: rgba(0, 255, 204, 0.1);
        color: #00FFCC;
        padding: 5px 15px;
        border-radius: 50px;
        border: 1px solid rgba(0, 255, 204, 0.3);
        font-weight: bold;
        text-transform: uppercase;
        font-size: 0.8rem;
    }

    
    .article-image {
        width: 100%;
        max-height: 500px;
        object-fit: cover;
        border-radius: 15px;
        margin-bottom: 30px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
    }

    
    .article-content {
        font-size: 1.1rem;
        line-height: 1.8;
        color: #d6d6d6;
    }

        .article-content p {
            margin-bottom: 20px;
        }

        .article-content h2, .article-content h3 {
            color: #fff;
            margin-top: 30px;
            margin-bottom: 15px;
            font-family: 'Rajdhani', sans-serif;
        }

        .article-content a {
            color: #00FFCC;
            text-decoration: none;
            border-bottom: 1px dashed #00FFCC;
            transition: 0.3s;
        }

            .article-content a:hover {
                color: #fff;
                border-bottom: 1px solid #fff;
            }

        .article-content blockquote {
            border-left: 4px solid #00E5FF;
            padding: 15px 20px;
            background: rgba(0, 229, 255, 0.05);
            color: #a0a0a0;
            font-style: italic;
            margin: 20px 0;
            border-radius: 0 10px 10px 0;
        }

    .interaction-bar {
        display: flex;
        justify-content: flex-start;
        gap: 15px;
        margin: 40px 0;
        padding: 15px 0;
        flex-wrap: wrap;
    }

    .btn-interact {
        background: transparent;
        border: 2px solid rgba(0, 229, 255, 0.3);
        color: #aaa;
        padding: 10px 25px;
        border-radius: 12px;
        font-family: 'Rajdhani', sans-serif;
        font-weight: 700;
        font-size: 1.1rem;
        cursor: pointer;
        transition: 0.3s;
        display: flex;
        align-items: center;
        gap: 10px;
        text-decoration: none;
    }

        .btn-interact:hover {
            background: rgba(0, 229, 255, 0.1);
            color: #fff;
            border-color: #00E5FF;
            transform: translateY(-3px);
        }

    .btn-like.active {
        background: rgba(255, 68, 68, 0.2);
        border-color: #ff4444;
        color: #ff4444;
        box-shadow: 0 0 20px rgba(255, 68, 68, 0.4);
    }

        .btn-like.active i {
            color: #ff4444;
        }

    .btn-share {
        border-color: #FFD700;
        color: #FFD700;
    }

        .btn-share:hover {
            background: #FFD700;
            color: #000;
            box-shadow: 0 0 20px rgba(255, 215, 0, 0.6);
        }

  
    .btn-action {
        padding: 10px 25px;
        border-radius: 50px;
        font-weight: bold;
        text-decoration: none;
        transition: 0.3s;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .btn-edit {
        background: rgba(255, 193, 7, 0.1);
        color: #ffc107;
        border: 1px solid #ffc107;
    }

        .btn-edit:hover {
            background: #ffc107;
            color: #000;
            box-shadow: 0 0 15px rgba(255, 193, 7, 0.5);
        }

    .btn-delete {
        background: rgba(255, 68, 68, 0.1);
        color: #ff4444;
        border: 1px solid #ff4444;
    }

        .btn-delete:hover {
            background: #ff4444;
            color: #fff;
            box-shadow: 0 0 15px rgba(255, 68, 68, 0.5);
        }

    .btn-back {
        background: transparent;
        color: #888;
        border: 1px solid #444;
    }

        .btn-back:hover {
            border-color: #fff;
            color: #fff;
        }

    
    .comment-section {
        margin-top: 50px;
        border-top: 1px solid rgba(0, 229, 255, 0.2);
        padding-top: 30px;
    }

    .comment-input {
        background-color: #0b1120 !important;
        border: 1px solid rgba(0, 229, 255, 0.3) !important;
        color: #ffffff !important;
        border-radius: 10px;
        padding: 15px;
        caret-color: #00FFCC;
    }

        .comment-input:focus {
            background-color: #122335 !important;
            box-shadow: 0 0 15px rgba(0, 229, 255, 0.2) !important;
            border-color: #00E5FF !important;
            color: #ffffff !important;
        }

        .comment-input::placeholder {
            color: #888 !important;
            opacity: 1;
        }

    input:-webkit-autofill, input:-webkit-autofill:hover, input:-webkit-autofill:focus, textarea:-webkit-autofill {
        -webkit-text-fill-color: #fff !important;
        -webkit-box-shadow: 0 0 0px 1000px #0b1120 inset !important;
        transition: background-color 5000s ease-in-out 0s;
    }

    .btn-comment-submit {
        background: linear-gradient(90deg, #00E5FF, #00FFCC);
        border: none;
        color: #05070a !important;
        font-weight: 800;
        font-family: 'Rajdhani', sans-serif;
        text-transform: uppercase;
        letter-spacing: 1px;
        padding: 12px 40px;
        border-radius: 50px;
        box-shadow: 0 0 20px rgba(0, 229, 255, 0.4);
        transition: 0.3s;
        cursor: pointer;
        margin-top: 15px;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

        .btn-comment-submit:hover {
            transform: scale(1.05);
            box-shadow: 0 0 40px rgba(0, 255, 204, 0.7);
            color: #000 !important;
        }

    .comment-item {
        background: rgba(255, 255, 255, 0.05);
        padding: 20px;
        border-radius: 15px;
        margin-bottom: 20px;
        border-left: 3px solid #00FFCC;
    }

    .comment-author {
        color: #00FFCC;
        font-weight: bold;
        font-family: 'Rajdhani', sans-serif;
        font-size: 1.1rem;
    }

    .comment-date {
        color: #666;
        font-size: 0.8rem;
        margin-left: 10px;
    }

    .comment-text {
        color: #ddd;
        margin-top: 10px;
        font-size: 1rem;
    }

   
    @@keyframes heartbeat {
        0% {
            transform: scale(1);
        }

        50% {
            transform: scale(1.4);
        }

        100% {
            transform: scale(1);
        }
    }

    .anim-beat {
        animation: heartbeat 0.4s ease-in-out;
    }

</style>

<div class="container">
    <div class="article-container">

        <div class="article-header">
            <h1 class="article-title">@Model.Baslik</h1>
            <div class="article-meta">
                <span><i class="far fa-calendar-alt"></i> @Model.OlusturulmaTarihi.ToString("dd MMMM yyyy")</span>
                <span class="category-badge"><i class="fas fa-tag"></i> @Model.Kategori?.Ad</span>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.ResimUrl))
        {
            <img src="@Model.ResimUrl" class="article-image" alt="@Model.Baslik">
        }

        <div class="article-content">
            @Html.Raw(Model.Icerik)
        </div>

        <div class="interaction-bar">
            <button id="btn-like-@Model.Id" class="btn-interact btn-like" onclick="begeniDegistir(@Model.Id)">
                <i class="far fa-heart"></i> <span id="begeni-sayisi" class="ms-2">@Model.BegeniSayisi</span>
            </button>
            <button class="btn-interact" onclick="yorumAlaninaGit()">
                <i class="fas fa-comment-alt"></i> Yorum Yap
            </button>
            <button class="btn-interact btn-share" onclick="paylas()">
                <i class="fas fa-share-alt"></i> Paylaş
            </button>
        </div>

        <hr style="border-color: rgba(255,255,255,0.1); margin: 40px 0;">

        <div class="d-flex justify-content-between align-items-center mb-5">
            <a asp-action="Index" class="btn-action btn-back"><i class="fas fa-arrow-left"></i> Listeye Dön</a>
            @if (User.Identity.IsAuthenticated)
            {
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn-action btn-edit"><i class="fas fa-pen"></i> Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn-action btn-delete"><i class="fas fa-trash"></i> Sil</a>
                </div>
            }
        </div>

        <div class="comment-section" id="yorum-alani">
            <h3 style="color:#00E5FF; font-family:'Rajdhani', sans-serif; margin-bottom: 20px;">
                <i class="fas fa-comments"></i> YORUMLAR (@(Model.Yorumlar != null ? Model.Yorumlar.Count : 0))
            </h3>

            @if (Model.Yorumlar != null && Model.Yorumlar.Any())
            {
                @foreach (var yorum in Model.Yorumlar.OrderByDescending(y => y.Tarih))
                {
                    <div class="comment-item">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <span class="comment-author">@yorum.AdSoyad</span>
                                <span class="comment-date">@yorum.Tarih.ToString("dd.MM.yyyy HH:mm")</span>
                            </div>

                            <button type="button" class="btn btn-sm btn-outline-danger border-0" data-bs-toggle="modal" data-bs-target="#silModal-@yorum.Id">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </div>
                        <p class="comment-text">@yorum.Icerik</p>
                    </div>

                    <div class="modal fade" id="silModal-@yorum.Id" tabindex="-1" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content" style="background-color: #0b1120; border: 1px solid #00E5FF; color: #fff;">
                                <div class="modal-header border-0">
                                    <h5 class="modal-title" style="color:#00E5FF; font-family:'Rajdhani', sans-serif;">YORUMU SİL</h5>
                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Kapat"></button>
                                </div>
                                <div class="modal-body">

                                    @if (User.Identity.IsAuthenticated && User.Identity.Name == yorum.Email)
                                    {
                                        <p>Bu yorumu silmek istediğinize emin misiniz?</p>
                                        <form asp-action="YorumSil" method="post">
                                            <input type="hidden" name="id" value="@yorum.Id" />
                                            <div class="d-flex justify-content-end gap-2">
                                                <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Vazgeç</button>
                                                <button type="submit" class="btn btn-danger btn-sm">EVET, SİL</button>
                                            </div>
                                        </form>
                                    }
                                    else
                                    {
                                        <p class="small text-muted">Bu yorumu silmek için, yorumu yazarken kullandığınız <strong>E-Posta</strong> adresini giriniz.</p>
                                        <form asp-action="YorumSil" method="post">
                                            <input type="hidden" name="id" value="@yorum.Id" />

                                            <input type="email" name="dogrulamaEmail" class="form-control comment-input mb-3" placeholder="ornek@email.com" required />

                                            <div class="d-flex justify-content-end gap-2">
                                                <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Vazgeç</button>
                                                <button type="submit" class="btn btn-danger btn-sm">YORUMU SİL</button>
                                            </div>
                                        </form>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="alert alert-dark text-center" style="background: rgba(255,255,255,0.05); border:none; color: #888;">
                    Henüz yorum yapılmamış. İlk yorumu sen yap! 🚀
                </div>
            }

            <div class="mt-5">
                <h4 style="color:#fff; margin-bottom:15px;">Bir Yorum Bırak</h4>
                <form asp-action="YorumEkle" method="post">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <div class="row">
                        <div class="col-md-6 mb-3"><input type="text" name="adSoyad" class="form-control comment-input" placeholder="Adınız Soyadınız" required /></div>
                        <div class="col-md-6 mb-3"><input type="email" name="email" class="form-control comment-input" placeholder="E-Posta Adresiniz (Görünmez)" required /></div>
                    </div>
                    <div class="mb-3"><textarea name="icerik" id="yorum-icerik" class="form-control comment-input" rows="4" placeholder="Düşüncelerini paylaş..." required></textarea></div>
                    <button type="submit" class="btn-comment-submit"><i class="fas fa-paper-plane"></i> YORUMU GÖNDER</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            var makaleId = @Model.Id;
            var storageKey = "begenildi_" + makaleId;
            if (localStorage.getItem(storageKey) === "true") { aktifYap(); }
        });

        function aktifYap() {
            var btn = $("#btn-like-@Model.Id");
            btn.addClass("active");
            btn.find("i").removeClass("far").addClass("fas");
        }

        function pasifYap() {
            var btn = $("#btn-like-@Model.Id");
            btn.removeClass("active");
            btn.find("i").removeClass("fas").addClass("far");
        }

        function begeniDegistir(id) {
            var storageKey = "begenildi_" + id;
            var suankiDurum = localStorage.getItem(storageKey) === "true";
            var yeniDurum = !suankiDurum;

            $.ajax({
                type: "POST",
                url: "/Makales/Begen",
                data: { id: id, begenildi: yeniDurum },
                success: function (response) {
                    if (response.success) {
                        $("#begeni-sayisi").text(response.begeniSayisi);
                        if (yeniDurum) {
                            localStorage.setItem(storageKey, "true");
                            aktifYap();
                            $(".btn-like i").addClass("anim-beat");
                            setTimeout(() => { $(".btn-like i").removeClass("anim-beat"); }, 500);
                        } else {
                            localStorage.removeItem(storageKey);
                            pasifYap();
                        }
                    }
                },
                error: function () { alert("Hata oluştu."); }
            });
        }

        function yorumAlaninaGit() {
            document.getElementById('yorum-alani').scrollIntoView({ behavior: 'smooth' });
            setTimeout(function() { document.getElementById('yorum-icerik').focus(); }, 800);
        }

        function paylas() {
            if (navigator.share) {
                navigator.share({ title: document.title, text: 'Göz at!', url: window.location.href }).catch(console.error);
            } else {
                navigator.clipboard.writeText(window.location.href);
                alert("Bağlantı kopyalandı! 📋");
            }
        }
    </script>
}