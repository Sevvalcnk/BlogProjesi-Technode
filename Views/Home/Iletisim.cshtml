@model BlogProjesi.Models.IletisimViewModel

@{
    ViewData["Title"] = "İletişim";
}

<style>
    
    body {
        background-color: #05070a;
        background-image: radial-gradient(circle at 50% -20%, rgba(0, 229, 255, 0.15), transparent 60%), radial-gradient(circle at 50% 120%, rgba(0, 255, 204, 0.1), transparent 60%);
        background-attachment: fixed;
        color: #fff;
        font-family: 'Poppins', sans-serif;
    }

    
    .contact-container {
        background-color: rgba(10, 15, 28, 0.95);
        border: 1px solid rgba(0, 229, 255, 0.2);
        border-radius: 20px;
        padding: 40px;
        box-shadow: 0 0 50px rgba(0, 229, 255, 0.1);
        margin-top: 30px;
        margin-bottom: 50px;
    }

    .page-title {
        font-family: 'Rajdhani', sans-serif;
        font-weight: 800;
        font-size: 2.5rem;
        color: #00FFCC; 
        text-transform: uppercase;
        text-shadow: 0 0 10px rgba(0, 255, 204, 0.5);
        border-bottom: 1px solid rgba(0, 255, 204, 0.2);
        padding-bottom: 15px;
        margin-bottom: 30px;
    }

    
    .form-label {
        color: #00E5FF;
        font-weight: 600;
        margin-bottom: 8px;
        font-size: 1.1rem;
        font-family: 'Rajdhani', sans-serif;
        letter-spacing: 1px;
    }

    .form-control {
        background-color: #0b1120 !important;
        border: 1px solid rgba(0, 229, 255, 0.3) !important;
        color: #ffffff !important;
        caret-color: #00FFCC !important;
        border-radius: 10px;
        padding: 12px 15px;
    }

        .form-control:focus {
            background-color: #122335 !important;
            border-color: #00FFCC !important;
            box-shadow: 0 0 15px rgba(0, 255, 204, 0.2) !important;
            color: #fff !important;
        }

        .form-control::placeholder {
            color: #888 !important;
            opacity: 1;
        }

    input:-webkit-autofill, input:-webkit-autofill:hover, input:-webkit-autofill:focus, textarea:-webkit-autofill {
        -webkit-text-fill-color: #fff !important;
        -webkit-box-shadow: 0 0 0px 1000px #0b1120 inset !important;
        transition: background-color 5000s ease-in-out 0s;
    }

    .btn-submit {
        background: linear-gradient(90deg, #00FFCC, #00E5FF);
        color: #05070a;
        font-weight: 800;
        padding: 12px 40px;
        border-radius: 50px;
        text-transform: uppercase;
        letter-spacing: 1px;
        border: none;
        box-shadow: 0 0 20px rgba(0, 255, 204, 0.3);
        transition: 0.3s;
        cursor: pointer;
        margin-top: 20px;
    }

    
    .map-container {
        border-radius: 15px;
        overflow: hidden;
        margin-bottom: 30px;
        border: 2px solid #00E5FF;
        box-shadow: 0 0 20px rgba(0, 229, 255, 0.3);
        height: 350px; 
        background-color: #000;
    }

    .info-box {
        background-color: rgba(10, 15, 28, 0.8);
        border: 1px solid rgba(0, 229, 255, 0.1);
        border-radius: 10px;
        padding: 20px;
        margin-bottom: 20px;
        transition: 0.3s;
    }

        .info-box:hover {
            background-color: rgba(0, 229, 255, 0.1);
            border-color: #00FFCC;
        }

        .info-box i {
            font-size: 1.5rem;
            color: #00FFCC;
            margin-right: 15px;
        }

        .info-box h4 {
            color: #fff;
            font-family: 'Rajdhani', sans-serif;
            font-weight: 700;
            margin-bottom: 5px;
        }

        .info-box p {
            color: #aaa;
            margin: 0;
        }

    .social-link {
        font-family: 'Rajdhani', sans-serif;
        font-weight: 700;
        text-transform: uppercase;
        padding: 10px 20px;
        border-radius: 50px;
        transition: 0.3s;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        margin-right: 10px;
        margin-bottom: 15px;
    }

    .btn-linkedin {
        background: rgba(0, 119, 181, 0.1);
        color: #0077B5;
        border: 1px solid #0077B5;
    }

        .btn-linkedin:hover {
            background: #0077B5;
            color: #fff;
            box-shadow: 0 0 15px #0077B5;
        }

    .btn-github {
        background: rgba(255, 255, 255, 0.1);
        color: #fff;
        border: 1px solid #fff;
    }

        .btn-github:hover {
            background: #fff;
            color: #000;
            box-shadow: 0 0 15px #fff;
        }

    .btn-email {
        background: rgba(0, 255, 204, 0.1);
        color: #00FFCC;
        border: 1px solid #00FFCC;
    }

        .btn-email:hover {
            background: #00FFCC;
            color: #000;
            box-shadow: 0 0 15px #00FFCC;
        }

</style>

<div class="container">
    <div class="row">

        <div class="col-lg-6">

            <h2 class="page-title" style="border:none; padding-bottom:0;"><i class="fas fa-handshake"></i> Bizi Takip Edin</h2>

            <div class="mb-5">
                <a href="https://www.linkedin.com/in/%C5%9Fevval-cinek-5b6876228" target="_blank" class="social-link btn-linkedin">
                    <i class="fab fa-linkedin-in"></i> LinkedIn
                </a>
                <a href="https://github.com/Sevvalcnk/Sevvalcnk" target="_blank" class="social-link btn-github">
                    <i class="fab fa-github"></i> GitHub
                </a>
                <a href="mailto:cineksevval52@gmail.com" class="social-link btn-email">
                    <i class="fas fa-envelope"></i> E-Posta
                </a>
            </div>

            <h2 class="page-title" style="margin-top:0;"><i class="fas fa-info-circle"></i> İletişim Detayları</h2>

            <div class="info-box">
                <div class="d-flex align-items-center">
                    <i class="fas fa-phone-alt"></i>
                    <div>
                        <h4>TELEFON</h4>
                        <p>+90 555 123 52 97 </p>
                    </div>
                </div>
            </div>

            <div class="info-box">
                <div class="d-flex align-items-center">
                    <i class="fas fa-building"></i>
                    <div>
                        <h4>ADRES</h4>
                        <p>Sinop, Türkiye</p>
                    </div>
                </div>
            </div>

            <h2 class="page-title" style="margin-top:30px;"><i class="fas fa-map-marked-alt"></i> Konum</h2>

            <div class="map-container">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d95521.66699222858!2d35.08809623665223!3d42.01339217965936!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40887c33df372699%3A0x629910317e35492d!2sSinop!5e0!3m2!1str!2str!4v1700000000000!5m2!1str!2str"
                        width="100%"
                        height="100%"
                        style="border:0;"
                        allowfullscreen=""
                        loading="lazy"
                        referrerpolicy="no-referrer-when-downgrade">
                </iframe>
            </div>

        </div>

        <div class="col-lg-6">
            <div class="contact-container">
                <h2 class="page-title" style="border:none; padding-bottom:0;"><i class="fas fa-comment-dots"></i> Mesaj Gönderin</h2>

                @if (TempData["Basarili"] != null)
                {
                    <div class="alert alert-success" style="background-color: rgba(0, 255, 204, 0.2); border-color: #00FFCC; color: #fff;">
                        @TempData["Basarili"]
                    </div>
                }

                <form asp-action="Iletisim" method="post">

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-4">
                        <label asp-for="AdSoyad" class="form-label">Adınız Soyadınız [Cite: 1]</label>
                        <input asp-for="AdSoyad" class="form-control" placeholder="Adınız Soyadınız" required />
                        <span asp-validation-for="AdSoyad" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Email" class="form-label">E-Posta Adresi</label>
                        <input asp-for="Email" class="form-control" placeholder="ornek@email.com" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Konu" class="form-label">Konu</label>
                        <input asp-for="Konu" class="form-control" placeholder="Mesajınızın konusu" required />
                        <span asp-validation-for="Konu" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Mesaj" class="form-label">Mesajınız</label>
                        <textarea asp-for="Mesaj" class="form-control" rows="5" placeholder="Mesajınızı buraya yazın..." required></textarea>
                        <span asp-validation-for="Mesaj" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn-submit">
                        <i class="fas fa-paper-plane"></i> GÖNDER
                    </button>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}